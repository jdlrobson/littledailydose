<!DOCTYPE html>
<html>
    <head>
        <title>{{char}} ({{pinyin}}) - A Little Daily Dose of Chinese</title>
        <meta name="viewport" content="initial-scale=1.0, user-scalable=yes, minimum-scale=0.25, maximum-scale=5.0, width=device-width"/>
        <style type="text/css">
        @import url('https://fonts.googleapis.com/css?family=Noto+Sans+SC&subset=chinese-simplified');
        /* colors */
        body { color: #5e554d; }
        .entry__traditional_char {
            color: #bca765;
        }
        .entry__reference {
            font-size: 0.7em;
            color: #5e554d;
        }
        h1 .entry__reference {
            font-size: 0.5em;
        }
        .entry__reference:empty {
            display: none;
        }
        .entry__reference:before {
            content: '– ';
        }
        .entry__traditional_char:before {
            content: '(';
        }
        .entry__traditional_char:after {
            content: ')';
        }
        .entry__info,
        h1, strong,
        h2, h3 { color: #3d7b90; }
        a {
            font-style: normal;
            color: #279c9a;
        }

        /* fonts*/
        body { font-family: 'Noto Sans SC', sans-serif;
        }
        strong { font-weight: normal; }
        a { text-decoration: none; font-weight: bold; }

        /* headings */
        h1, h2 {
            margin: 8px 0;
            font-weight: bold;
        }
        h2 {
            border-top: solid 1px #3d7b90;
            border-bottom: solid 1px #3d7b90;
            font-size: 1.2em;
            padding: 2px 0;
        }
        section strong:first-child {
            display: block;
            font-style: italic;
            margin-bottom: 8px;
        }
        h3 {
            text-decoration: underline;
            text-transform: uppercase;
            font-size: .9em;
            font-weight: bold;
            margin: 12px 0 6px;
        }
        p {
            margin: 0;
        }
        /* entry */
        .entry__info {
            font-weight: bold;
            font-size: 1.1em;
        }
        .entry__heading__note {
            font-size: .7em;
            color: #5e554d;
        }
        .entry__heading__note:after,
        .entry__heading__note:before {
            content: '–';
            padding: 0 4px;
        }
        /* usage */
        .entry__info__usage {
            font-size: .9em;
        }
        .entry__info__usage:before {
            content: '|';
            display: inline-block;
            padding: 0 6px;
        }
        .entry__info__difficulty { font-weight: normal; }
        .entry__info__difficulty:after {
            content: '++';
            color: #bcb08e;
        }
        section {
            line-height: 1.5;
        }
        .definition em {
            color: #a29173;
        }
        .definition em:before {
            content: '<';
        }
        .definition em:after {
            content: '>';
        }
        ul {
            list-style: none;
            margin: 8px 0;
            padding: 0;
        }
        @media all and ( min-width: 720px ) {
            body {
                width: 500px; margin: 20px auto;
            }
        }
        @media print {
            html {
                height: 100%;
                display: flex;
            }
            body {
                width: 120mm;
                height: 170mm;
                font-size: 8pt;
                margin: auto;
            }
        }
        </style>
    </head>
    <body>
        <header><a href="/toc.html">table of contents</a></header>
        {{#ref}}
        <div class="entry__info">
            <span class="refnum">{{ref}}</span><span class="entry__info__usage">Usage: <span class="entry__info__difficulty">{{difficulty}}</span></span>
        </div>
        {{/ref}}
        <h1>
            <span>{{char}}</span>
            {{#traditional}}<span class="entry__traditional_char">{{traditional}}</span> {{/traditional}}
            {{#pinyin}}<span>{{pinyin}}</span>{{/pinyin}}
            <span class="entry__reference">{{charReference}}</span>
        </h1>
        {{#definitions}}
        <h2>
            {{heading}}
            <span class="entry__reference">{{{reference}}}</span>
        </h2>
        <section class="definition">
            {{{text}}}
        </section>
        {{/definitions}}
        {{#personalNote}}
        <section>
           {{{personalNote}}}
        </section>
        {{/personalNote}}
    </body>
    <!-- source {{source}} -->
</html>